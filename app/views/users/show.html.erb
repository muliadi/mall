
<section class="section">
  <div class="container">
    <div class="row">
      <h4 class="page-header"><%= @user.name %>'s Profile</h4>
      <div class="col-md-3 section-part">
        <div class="center">
          <span class="round-image-100"><%= image_tag(@user.image(:thumb)) %></span>
          <h6 style="font-weight: bold"><%= @user.name %></h6>
          <span><i class="fa fa-map-marker" aria-hidden="true"> <%= user_location %></i></span>
          <br><hr>
          <button type="button" name="button" class="btn button-default">Follow</button>
        </div>
      </div>
      <div class="col-md-6 section-part">
        <h4>Shipping Information</h4>


      </div>
      <% if (user_signed_in?) && (current_user == @user) %>
        <div class="col-md-3 section-part">
          <h5>Create a shop and start sellin things you like</h5><hr>
          <%= link_to "Create a Shop", new_shop_path , class: " btn button-default" %>
        </div>
      <% end %>

    </div>
  </div>
</section>
