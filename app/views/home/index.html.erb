
<div class="container">
  <section class="section clearfix">
    <div class="row">
      <div class="col-md-2">
        <div class="section-part">
          <div class="cat-nav">
            <h4 class="section-header">Categories<i class="fa fa-chevron-circle-right" aria-hidden="true"><%= link_to "See all", categories_path %></i></h4>
            <% @categories.each do |category| %>
              <ul class="cat-list">
                <li><%= link_to category.name, category_path(category.id) %></li>
              </ul>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="section-part">
          <div class="main-banner">

          </div>

        </div>
      </div>
      <div class="col-md-2">
        <div class="section-part">
          <h4 class="section-header">Deal of the day</h4>
        </div>
      </div>
    </div>
  </section>
  <section class="section">
    <div class="page-header">
      <h3>Featured items<small> Browse through our latest items</small></h3>
    </div>
    <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-2">
            <div class="thumbnail">
              <%= link_to image_tag(item.image.url(:medium)), item %>
                <div class="caption">
                  <h3><%= link_to item.name, item %></h3>
                  <p class="amount"><%= number_to_currency(item.price) %></p>
                  <span><i class="fa fa-map-marker" aria-hidden="true"><%= item.location %></i></span>
                  by:
                  <p class="seller-name label label-primary"><%= " #{item.user.name}" %></p>
                  <br>
                </div>
            </div>
          </div>
        <% end %>
      </div>
  </section>
  <section class="section">
    <div class="page-header">
      <h3>Featured Shop<small> Browse through your most trusted shops</small></h3>
    </div>
    <div class="row">
      <div class="col-md-4">


      </div>
      <div class="col-md-4">

      </div>
      <div class="col-md-4">

      </div>
    </div>

  </section>
</div>

</div>
