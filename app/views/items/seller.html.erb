<table class="table table-striped table-bordered">
  <tr>
    <th class="center">Image</th>
    <th class="center">Name</th>
    <th class="center">Description</th>
    <th class="center">Price</th>
    <th class="center">Action</th>
  </tr>

  <% @items.each do |item| %>
    <tr>
      <td>
        <%= image_tag item.image.url(:thumb) %>
      </td>
      <td><%= item.name %></td>
      <td><%= item.description %></td>
      <td><%= number_to_currency(item.price) %></td>
      <td>
        <div class="btn-group">
          <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" role="menu">
            <li><%= link_to "View", item, class: "btn btn-link" %></li>
            <li><%= link_to "Edit", edit_item_path(item), class: "btn btn-link" %></li>
            <li><%= link_to 'Destroy', item, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-link" %></li>
          </ul>
        </div>
      </td>
    </tr>
  <% end %>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Item', new_item_path, class: "btn btn-link", data: { no_turbolink: true } %>
<% end %>
