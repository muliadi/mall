
    <%= simple_form_for(@shop, html: { class: 'form-horixontal' }) do |f| %>
      <% if @shop.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@shop.errors.count, "error") %> prohibited this shop from being saved:</h2>

          <ul>
          <% @shop.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %><br>
        <%= f.text_area :description, class: "form-control"  %>
        <small>A good description doesnt just attrack customers, it brings them back.</small>
      </div>
      <div class="form-group">
        <%= f.label :city %><br>
        <%= f.text_field :city, class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label :country %><br>
        <%= f.text_field :country, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :address %><br>
        <%= f.text_field :address, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :category %><br>
        <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name), {}, class: "form-control"  %>
      </div>
      <div class="form-group">
        <%= f.label :location %><br>
        <%= f.text_field :location, class: "form-control"   %>
      </div>
      <div class="form-group">
        <%= f.label :image %><br>
        <%= f.file_field :image, class: "form-control"   %>
        <small>An image or your shops logo. This will help your customers know who you are</small>
      </div>
      <div class="actions">
        <%= f.submit class: "button-other" %>
      </div>
    <% end %>
